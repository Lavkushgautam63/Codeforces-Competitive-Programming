#include <iostream>
using namespace std;

int main() {
    int testCases;
    cin >> testCases;

    while (testCases--) {
        long long candies, kids;
        cin >> candies >> kids;

        long long extra = candies % kids;
        long long limit = kids / 2;

        if (extra <= limit) {
            cout << candies << endl;
        } else {
            long long result = candies - (extra - limit);
            cout << result << endl;
        }
    }

    return 0;
}
