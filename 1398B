#include <bits/stdc++.h>
using namespace std;

int main() {
    int t;
    cin >> t;

    while (t--) {
        string s;
        cin >> s;

        vector<int> v;
        int n = s.size();
        int i = 0;

        while (i < n) {
            if (s[i] == '1') {
                int cnt = 0;
                while (i < n && s[i] == '1') {
                    cnt++;
                    i++;
                }
                v.push_back(cnt);
            } else {
                i++;
            }
        }

        sort(v.begin(), v.end(), greater<int>());

        int ans = 0;
        for (int i = 0; i < v.size(); i += 2) {
            ans += v[i];
        }

        cout << ans << "\n";
    }

    return 0;
}
