#include <iostream>
using namespace std;

int main() {
    int n;
    cin >> n;

    while (n--) {
        string word;
        cin >> word;

        int size = word.size();

        if (size > 10) {
            cout << word.front() 
                 << size - 2 
                 << word.back() << "\n";
        } else {
            cout << word << "\n";
        }
    }
    return 0;
}
