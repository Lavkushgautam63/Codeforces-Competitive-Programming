#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<int> even, odd;

    for(int i = 0; i < n; i++) {
        int x;
        cin >> x;
        if(x % 2 == 0) even.push_back(x);
        else odd.push_back(x);
    }

    if(abs((int)even.size() - (int)odd.size()) <= 1) {
        cout << 0;
        return 0;
    }

    sort(even.begin(), even.end());
    sort(odd.begin(), odd.end());

    int ans = 0;

    if(even.size() > odd.size()) {
        int extra = even.size() - odd.size() - 1;
        for(int i = 0; i < extra; i++) ans += even[i];
    } else {
        int extra = odd.size() - even.size() - 1;
        for(int i = 0; i < extra; i++) ans += odd[i];
    }

    cout << ans;
}
