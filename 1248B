#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    vector<long long> a(n);
    for(int i = 0; i < n; i++) cin >> a[i];

    sort(a.begin(), a.end());

    long long sum1 = 0, sum2 = 0;

    for(int i = 0; i < n/2; i++)
        sum1 += a[i];

    for(int i = n/2; i < n; i++)
        sum2 += a[i];

    cout << sum1*sum1 + sum2*sum2 << "\n";
}
