#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    long long cost = 0;
    int neg = 0, zero = 0;

    for(int i = 0; i < n; i++) {
        long long x;
        cin >> x;

        if(x > 0) {
            cost += (x - 1);
        } else if(x < 0) {
            cost += (-x - 1);
            neg++;
        } else {
            cost += 1;
            zero++;
        }
    }

    if(neg % 2 == 1 && zero == 0) {
        cost += 2;
    }

    cout << cost;
    return 0;
}
