#include <iostream>
#include <string>
using namespace std;

int main() {
    string n;
    cin >> n;
    int luckyCount = 0;
    for (char c : n) if (c == '4' || c == '7') luckyCount++;
    string s = to_string(luckyCount);
    for (char c : s) if (c != '4' && c != '7') { cout << "NO\n"; return 0; }
    cout << "YES\n";
}
