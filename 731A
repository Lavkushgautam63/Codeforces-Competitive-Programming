#include <bits/stdc++.h>
using namespace std;

int main() {
    string s;
    cin >> s;

    int rotations = 0;
    char current = 'a';

    for (char c : s) {
        int diff = abs(c - current);
        rotations += min(diff, 26 - diff);
        current = c;
    }

    cout << rotations;
    return 0;
}
